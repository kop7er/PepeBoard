{
  "name": "pepe-board",
  "private": true,
  "version": "1.0.0",
  "description": "Mono repo containing the Pepe Board Discord bot and website",
  "author": "Kopter",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kop7er/PepeBoard.git"
  },
  "bugs": {
    "url": "https://github.com/kop7er/PepeBoard/issues"
  },
  "homepage": "https://github.com/kop7er/PepeBoard#readme",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "start": "pnpm --filter @pepeboard/bot start",
    "bot:dev": "pnpm --filter @pepeboard/bot dev",
    "bot:build": "pnpm --filter @pepeboard/bot build",
    "bot:start": "pnpm --filter @pepeboard/bot start",
    "web:dev": "pnpm --filter @pepeboard/web dev",
    "web:build": "pnpm --filter @pepeboard/web build",
    "web:start": "pnpm --filter @pepeboard/web start",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check": "biome check --write ."
  },
  "engines": {
    "node": ">=24",
    "pnpm": ">=10"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4"
  }
}
